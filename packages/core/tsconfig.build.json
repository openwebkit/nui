{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",
    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.stories.tsx",
    "src/**/*.stories.ts",
    "src/**/*.story.tsx",
    "src/**/*.story.ts",
    "src/**/__tests__/**",
    "node_modules"
  ]
}
